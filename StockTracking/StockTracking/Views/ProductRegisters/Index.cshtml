@model IEnumerable<StockTracking.Models.ProductRegister>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Yeni Zimmet Ekle", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Quantity)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.RegisterID }, new { @class = "btn btn-primary btn-sm", @Style="Width:50%"})
                        @Html.ActionLink("Sil", "Delete", new { id = item.RegisterID }, new { @class = "btn btn-danger btn-sm", @Style = "Width:40%" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>