@model StockTracking.Models.ProductRegister

@{
    ViewBag.Title = "Edit";
}

 


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="margin-left:12px"><i class="fas fa-edit"></i>&nbsp;ProductRegister</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RegisterID)

        <div class="form-group">
            @Html.LabelFor(model => model.UserID, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductID, "Product Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.DropDownList("ProductID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity,"Registered Product Count", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control ForbiddenQuantity", step = "any ", min = "0", type = "number", maxlength = "14" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Zimmet Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
