@model IEnumerable<StockTracking.Models.Brand>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-4">
        <h2>Marka Listesi</h2>

        <p>
            @Html.ActionLink("Yeni Marka Ekle", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.BrandID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.BrandID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
