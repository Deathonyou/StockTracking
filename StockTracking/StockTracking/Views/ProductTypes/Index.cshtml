@model IEnumerable<StockTracking.Models.ProductType>

@{
    ViewBag.Title = "Index";
}
    <h3 style="text-align:center">Product Type List</h3>

<div class="row">
    <div class="col-md-12">
        <p>

            @Html.ActionLink("Add New Product Type", "Create", null, new { @class = "btn btn-primary" })

        </p>
        <table id="ProductTypeList" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:80%">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.ActionLink("Update", "Edit", new { id = item.ProductTypeID }, new { @class = "btn btn-primary btn-sm",@Style="width:50%" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductTypeID }, new { @class = "btn btn-danger btn-sm", @style="Width:47%" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>