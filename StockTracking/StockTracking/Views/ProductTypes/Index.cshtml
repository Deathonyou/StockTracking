@model IEnumerable<StockTracking.Models.ProductType>

@{
    ViewBag.Title = "Index";
}

<h2>Liste</h2>
<div class="row">
    <div class="col-md-4">
        <p>

            @Html.ActionLink("Yeni Ürün Tipi Ekle", "Create", null, new { @class = "btn btn-primary" })

        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.ProductTypeID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.ProductTypeID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>