@model StockTracking.Models.Department

@{
    ViewBag.Title = "Edit";
}

 


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 style="margin-left:12px"><i class="fas fa-edit"></i>&nbsp;Department</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmentID)

        <div class="form-group">
           
            <div class="col-md-12">
                @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", maxlength = "40" } })
                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Department List", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}
 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
