@model IEnumerable<StockTracking.Models.Department>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="width:100%">
    <div class="row">
        <div class="col-md-12">
            <h3 style="text-align:center">Department List</h3>
            <p>
                @Html.ActionLink("Add New Department", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table id="DepartmentList" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td Style="width:80%">
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "Edit", new { id = item.DepartmentID }, new { @class = "btn btn-primary btn-sm", Style = "width:50%" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID }, new { @class = "btn btn-danger btn-sm", Style = "width:47%" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
