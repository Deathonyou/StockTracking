@model StockTracking.Models.Brand

@{
    ViewBag.Title = "Edit";
}
 

    <div class="container">
    
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 style="margin-left:12px"><i class="fas fa-edit"></i>&nbsp;Brand</h3>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BrandID)

                <div class="form-group">
                    
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.BrandName, "Brand Name", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control", maxlength = "40" } })
                        @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }
    </div>
    
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
